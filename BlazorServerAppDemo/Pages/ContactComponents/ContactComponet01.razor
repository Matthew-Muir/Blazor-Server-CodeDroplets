 <p>
     <b>Name: </b> <span>@CurrentContact.FirstName @CurrentContact.LastName</span><br/>
    @if (DisplayEmail)
    {
            <b>Email: </b><span>@CurrentContact.Email</span><br />

    }
     @if (displayInfo)
     {
         <span>the email is address is @CurrentContact.Email</span>
     }
 </p> 
 
 <br />
 <button @onclick="@(() => displayInfo = !displayInfo)">Show info</button>
 <button @onclick="@(() => DeleteCurrentContact.InvokeAsync(CurrentContact))">Delete</button>
@code{

    [Parameter]
    public Contact CurrentContact { get; set; }

    [Parameter]
    public bool DisplayEmail { get; set; }

    [Parameter]
    public EventCallback<Contact> DeleteCurrentContact { get; set; }

    private bool displayInfo = false;
 }