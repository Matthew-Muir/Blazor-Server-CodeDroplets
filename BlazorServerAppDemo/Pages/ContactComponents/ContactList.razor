<input type="checkbox" @bind="DisplayEmail" /><label>Display Email</label>
@if(Contacts == null)
{
    @NullContacts
}
else if(Contacts.Count == 0){
    @Empty
}
else
{
 @foreach (var contact in Contacts)
    {
        <ContactComponet01 DeleteCurrentContact="DeleteContact" CurrentContact="contact" DisplayEmail="@DisplayEmail"></ContactComponet01>
    }   
}


@code {
    [Parameter]
    public RenderFragment NullContacts { get; set; }
    [Parameter]
    public RenderFragment Empty { get; set; }
    [Parameter]
    public List<Contact> Contacts { get; set; }
    private bool DisplayEmail = true;

    private void DeleteContact(Contact contact)
    {
        Contacts.Remove(contact);
    }
}